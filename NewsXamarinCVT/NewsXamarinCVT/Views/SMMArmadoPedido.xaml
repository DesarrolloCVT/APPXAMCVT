<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsXamarinCVT.Views.SMMArmadoPedido"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:dxe="http://schemas.devexpress.com/xamarin/2014/forms/editors">
    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout>
            <StackLayout Padding="20">
                <Label Text="medición de armado de pedidos" HorizontalTextAlignment="Center" FontSize="Large" TextColor="Black"/>
            </StackLayout>
            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="N° Pedido" LabelFontSize="15"  BoxHeight="50" x:Name="txtNPedido"
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"                               
                                 Keyboard="Numeric">
                </dxe:TextEdit>
            </StackLayout>
            <StackLayout Padding="10">
                <Button Text="BUSCAR" TextColor="White" x:Name="btn_Crear" BackgroundColor="#1C39F1"  CornerRadius="5" WidthRequest="250" Padding="10" FlexLayout.AlignSelf="Stretch"  HorizontalOptions="CenterAndExpand" Clicked="btn_Crear_Clicked"/>
            </StackLayout>
        </StackLayout>      
    </ScrollView>
</ContentPage>
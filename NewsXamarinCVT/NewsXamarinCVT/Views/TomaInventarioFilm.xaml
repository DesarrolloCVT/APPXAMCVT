                </dxe:TextEdit>
                <Label x:Name="lblError5" Text="" IsVisible="False" TextColor="Red" />
            </StackLayout>

            <StackLayout Margin="25,10,25,50">
                <dxe:SimpleButton  Text="AGREGAR" CornerRadius="20" FontAttributes="Bold" x:Name="btn_agregar" HeightRequest="70" 
                                      PressedBackgroundColor="MediumSeaGreen"
                                       BackgroundColor="Green"
                                       BorderColor="Black"
                                       BorderThickness="2"
                                       PressedBorderColor="DarkOrange"                                     
                                       Clicked="Btn_agregar_Clicked" >
                </dxe:SimpleButton>
            </StackLayout>

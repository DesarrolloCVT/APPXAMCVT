            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="N° Pallet" LabelFontSize="15"  BoxHeight="50" x:Name="txt_pallet" Completed="Txt_pallet_Completed" 
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"
                                  Keyboard="Numeric"
                                 >
                </dxe:TextEdit>
                <Label x:Name="lblError" Text="" IsVisible="False" TextColor="Red" />
            </StackLayout>
            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="Producto" LabelFontSize="15"  BoxHeight="50" x:Name="txt_producto" 
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"
                              
                                 >
                </dxe:TextEdit>
                <Label x:Name="lblError2" Text="" IsVisible="False" TextColor="Red" />
            </StackLayout>
            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="Lote" LabelFontSize="15"  BoxHeight="50" x:Name="txt_lote" 
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"
                                 

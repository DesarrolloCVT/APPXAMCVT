                </dxe:TextEdit>
                <Label x:Name="lblError3" Text="" IsVisible="False" TextColor="Red" />
            </StackLayout>
            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="Cantidad" LabelFontSize="15"  BoxHeight="50" x:Name="txt_cantidad" 
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"                                 
                                 Completed="Txt_cantidad_Completed" Keyboard="Numeric">
                </dxe:TextEdit>
                <Label x:Name="lblError4" Text="" IsVisible="False" TextColor="Red" />
            </StackLayout>
            <StackLayout Margin="25,0">
                <dxe:TextEdit LabelText="Ubicacion" LabelFontSize="15"  BoxHeight="50" x:Name="txt_ubicacion" 
                                  IsLabelFloating="False" BorderColor="Green" LabelColor="Green"                                 
